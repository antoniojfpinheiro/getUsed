#: kivy 1.10.0
#:import FadeTransition kivy.uix.screenmanager.FadeTransition

ScreenManager:
    transition: FadeTransition(duration=0.25)
    id: screen_manager
    CollectionScreen:
        id: collection_screen
        name: 'collection'
        manager: 'screen_manager'
    PongScreen:
        id: pong_screen
        name: 'pong'
        manager: 'screen_manager'
        BackButton:
    MediaScreen:
        id: media_screen
        name: 'media'
        manager: 'screen_manager'
        BackButton:
    PaintScreen:
        id: paint_screen
        name: 'paint'
        manager: 'screen_manager'
        BackButton:

<BackButton>
    Button:
        text: 'Back'
        on_press: app.root.current = 'collection'
        size_hint: 10,10

<CollectionScreen>
    name: 'collection'
    BoxLayout:
        Button:
            text: 'Pong'
            on_press: app.root.current = 'pong'
        Button:
            text: 'Media'
            on_press: app.root.current = 'media'
        Button:
            text: 'Paint'
            on_press: app.root.current = 'paint'

<PongScreen>
    id: pong_class
    name: 'pong'
    on_enter: pong_class.start()

<MediaScreen>
    id: media_class
    name: 'media'

<PaintScreen>
    id: paint_class
    name: 'paint'
    on_enter: paint_class.start()